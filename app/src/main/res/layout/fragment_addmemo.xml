<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/memo_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        app:layout_constraintBottom_toTopOf="@id/memo_title"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/arrow_back"
            android:clickable="true"
            android:focusable="true" />

        <ImageView
            android:id="@+id/save_memo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/note_add"
            android:layout_gravity="end"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="20dp" />

    </androidx.appcompat.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/memo_toolbar"
        android:background="@color/black" />

    <TextView
        android:id="@+id/memo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/memo_title"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memo_toolbar"
        android:layout_margin="20dp" />

    <EditText
        android:id="@+id/input_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/memo_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/memo_toolbar"
        android:layout_margin="5dp" />

    <EditText
        android:id="@+id/input_memo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/memo_title"
        app:layout_constraintBottom_toTopOf="@id/bottom_sheet"
        android:background="@drawable/memo_box"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:hint="@string/input_memo"
        android:gravity="top"
        android:inputType="textMultiLine|textNoSuggestions" />

    <fragment
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/input_memo"
        app:layout_constraintBottom_toTopOf="@id/navigation_view"
        android:layout_marginBottom="5dp" />

    <View
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        app:layout_constraintBottom_toTopOf="@id/memo_navigation"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/memo_navigation"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/yellow"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/color_letter"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/format_color"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:clickable="true"
            android:layout_marginStart="25dp"
            android:focusable="true" />

        <ImageView
            android:id="@+id/image_insert"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/add_photo"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:clickable="true"
            android:focusable="true" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/memo_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

    </LinearLayout>

    


</androidx.constraintlayout.widget.ConstraintLayout>
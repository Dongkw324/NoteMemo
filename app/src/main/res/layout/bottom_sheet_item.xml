<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/color_green"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/color_item_1"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"/>

    <ImageView
        android:id="@+id/color_blue"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/color_item_2"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"/>

    <ImageView
        android:id="@+id/color_red"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/color_item_3"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"/>

    <ImageView
        android:id="@+id/color_yellow"
        android:clickable="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/color_item_4"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:focusable="true" />

    <ImageView
        android:id="@+id/color_orange"
        android:clickable="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/color_item_5"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:focusable="true" />

    <ImageView
        android:id="@+id/color_pink"
        android:clickable="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/color_item_6"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:focusable="true" />

    <ImageView
        android:id="@+id/color_purple"
        android:clickable="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/color_item_7"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:focusable="true" />

</LinearLayout>